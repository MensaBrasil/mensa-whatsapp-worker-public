{
  "name": "mensa-whatsapp-admin",
  "version": "1.0.0",
  "description": "O Robô Zelador da Mensa Brasil é um script em JavaScript que automatiza a manutenção e gerenciamento de grupos do WhatsApp associados à Mensa Brasil. Ele verifica a atividade dos membros, remove membros inativos e envia mensagens para números que não foram encontrados na planilha de membros.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start-add": "node --max-old-space-size=4096 src/main.js --add",
    "start-remove": "node --max-old-space-size=4096 src/main.js --remove",
    "start-passive": "node --max-old-space-size=4096 src/main.js --scan --fetch --report",
    "start-add-check": "node --max-old-space-size=4096 src/main.js --add --scan --fetch",
    "start-remove-check": "node --max-old-space-size=4096 src/main.js --remove --scan --fetch",
    "loop-add": "while true; do npm run start-add; sleep 10; done",
    "loop-remove": "while true; do npm run start-remove; sleep 10; done",
    "loop-passive": "while true; do npm run start-passive; sleep 10; done",
    "loop-add-check": "while true; do npm run start-add-check; sleep 10; done",
    "loop-remove-check": "while true; do npm run start-remove-check; sleep 10; done",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Associacao-Mensa-Brasil/mensa-whatsapp-admin.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Associacao-Mensa-Brasil/mensa-whatsapp-admin/issues"
  },
  "homepage": "https://github.com/Associacao-Mensa-Brasil/mensa-whatsapp-admin#readme",
  "dependencies": {
    "dotenv": "^16.4.7",
    "ioredis": "^5.5.0",
    "node-telegram-bot-api": "^0.66.0",
    "pg": "^8.13.3",
    "pgsql": "^1.0.0",
    "qrcode-terminal": "^0.12.0",
    "redis": "^4.7.0",
    "twilio": "^5.4.4",
    "whatsapp-web.js": "^1.26.1-alpha.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "mock-socket": "^9.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "keywords": []
}
